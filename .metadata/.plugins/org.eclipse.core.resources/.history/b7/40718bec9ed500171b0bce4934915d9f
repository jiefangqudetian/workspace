package file;

import java.io.File;

public class FileUtil {

	public static void remove(File file) {
		while(file.exists()) {
				romove(file);
			}
	}
	
	public static void romove(File file) {
		if(file.isFile()) {
			file.delete();
		} else if(file.listFiles().length==0) {
			file.delete();
		} else{
			File[] files = file.listFiles();
			for(File fil : files) {
				romove(fil);
			}
		}
	}
	
	public static void delete(File file) {
		if(!file.isFile()) {
			File[] files = file.listFiles();
			for(File fil : files) {
				delete(fil);
			}
		} 
		file.delete();
	}
}
